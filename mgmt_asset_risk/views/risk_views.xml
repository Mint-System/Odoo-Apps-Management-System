<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="risk_form_view" model="ir.ui.view">
        <field name="name">mgmt_risk_risk.risk_form_view</field>
        <field name="model">mgmt.risk</field>
        <field name="inherit_id" ref="mgmt_risk.risk_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page string="Assets" name="assets">
                    <field name="asset_ids" nolabel="1">
                        <tree>
                            <field name="name" />
                            <field name="ref" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
