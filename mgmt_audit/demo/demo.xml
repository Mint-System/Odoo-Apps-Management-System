<odoo>

    <record id="demo_audit_2023" model="mgmt.audit">
        <field name="name">Yearly Internal Audit 2023</field>
        <field name="type">internal</field>
        <field name="planned_date">2023-01-01</field>
        <field name="stage_id" ref="audit_stage_done" />
        <field name="responsible_id" ref="base.user_admin" />
    </record>

    <record id="demo_audit_2024" model="mgmt.audit">
        <field name="name">Yearly Internal Audit 2024</field>
        <field name="type">internal</field>
        <field name="planned_date">2024-01-01</field>
        <field name="stage_id" ref="audit_stage_done" />
        <field name="responsible_id" ref="base.user_admin" />
    </record>

    <record id="demo_statement_power_supply_missing" model="mgmt.statement">
        <field name="name">Redundant power supply missing</field>
        <field name="audit_id" ref="demo_audit_2023" />
        <field
            name="requirement_id"
            ref="mgmt_requirement.demo_requirement_power_redundancy"
        />
        <field name="risk_id" ref="mgmt_risk.demo_risk_server_outage" />
        <field
            name="nonconformity_id"
            ref="mgmt_audit_project.demo_nonconformity_no_power_supply"
        />
    </record>

    <record id="demo_attachment_external_guideline" model="ir.attachment">
        <field name="name">External Guideline</field>
        <field name="url">https://example.com</field>
    </record>

    <record id="demo_statement_power_supply_installed" model="mgmt.statement">
        <field name="name">Redundant power supply installed</field>
        <field name="audit_id" ref="demo_audit_2024" />
        <field
            name="requirement_id"
            ref="mgmt_requirement.demo_requirement_power_redundancy"
        />
        <field name="risk_id" ref="mgmt_risk.demo_risk_server_outage_revision" />
        <field name="attachment_id" ref="demo_attachment_external_guideline" />
    </record>

</odoo>
