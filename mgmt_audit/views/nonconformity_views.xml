<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="nonconformity_form_view" model="ir.ui.view">
        <field name="name">mgmt_audit.nonconformity_form_view</field>
        <field name="model">mgmt.nonconformity</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="name" />
                                    <field name="type" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="nonconformity_view_tree" model="ir.ui.view">
        <field name="name">mgmt_audit.nonconformity_tree_view</field>
        <field name="model">mgmt.nonconformity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="type" />
            </tree>
        </field>
    </record>

    <record id="nonconformity_kanban_view" model="ir.ui.view">
        <field name="name">mgmt_audit.nonconformity_kanban_view</field>
        <field name="model">mgmt.nonconformity</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name" />
                <field name="type" />

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_details">
                                <strong><field name="name" /></strong>
                                <div>Type: <field name="type" /></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_mgmt_nonconformity_view" model="ir.actions.act_window">
      <field name="name">Nonconformities</field>
      <field name="res_model">mgmt.nonconformity</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem
        id="menu_evaluation_nonconformities"
        name="Non-Conformities"
        parent="mgmt_base.menu_management_evaluation"
        action="action_mgmt_nonconformity_view"
        sequence="20"
    />

</odoo>
