<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="statement_form_view" model="ir.ui.view">
        <field name="name">mgmt_audit.statement_form_view</field>
        <field name="model">mgmt.statement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="risk_id" />
                                    <field name="audit_id" />
                                    <field name="requirement_id" />
                                    <field name="nonconformity_id" />
                                    <field name="recommendation_id" />
                                    <field name="attachment_id" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="statement_view_tree" model="ir.ui.view">
        <field name="name">mgmt_audit.statement_tree_view</field>
        <field name="model">mgmt.statement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="risk_id" />
                <field name="audit_id" />
                <field name="requirement_id" optional="hide" />
                <field name="nonconformity_id" optional="hide" />
                <field name="recommendation_id" optional="hide" />
                <field name="attachment_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="statement_search_view" model="ir.ui.view">
        <field name="name">mgmt_audit.statement_search_view</field>
        <field name="model">mgmt.statement</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <filter
                    string="Name"
                    name="name_filter"
                    domain="[('name', 'ilike', '')]"
                />
            </search>
        </field>
    </record>

    <record id="action_mgmt_statement_view" model="ir.actions.act_window">
        <field name="name">Statements</field>
        <field name="res_model">mgmt.statement</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="statement_search_view" />
    </record>

    <menuitem
        id="menu_audit_statements"
        name="Statements"
        parent="mgmt_base.menu_mgmt_audit"
        action="action_mgmt_statement_view"
        sequence="30"
    />

</odoo>
