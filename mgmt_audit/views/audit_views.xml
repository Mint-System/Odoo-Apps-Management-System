<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="audit_form_view" model="ir.ui.view">
        <field name="name">mgmt_audit.audit_form_view</field>
        <field name="model">mgmt.audit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar" statusbar_visible="draft,in_progress,done" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="name" />
                                    <field name="type" />
                                    <field name="plannend_date" />
                                    <field name="stage_id" />
                                    <field name="responsible_id" />
                                    <field name="auditor_ids" widget="many2many_tags" />
                                </group>
                            </group>
                        </page>
                        <page string="Requirements">
                            <field name="requirement_ids" widget="many2many_tags" />
                        </page>
                        <page string="Statements">
                            <field name="statement_ids" widget="many2many_tags" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

      <record id="audit_view_tree" model="ir.ui.view">
        <field name="name">mgmt_audit.audit_tree_view</field>
        <field name="model">mgmt.audit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="type" />
                <field name="plannend_date" />
                <field name="stage_id" />
                <field name="responsible_id" />
            </tree>
        </field>
    </record>

    <record id="audit_kanban_view" model="ir.ui.view">
      <field name="name">mgmt_audit.audit_kanban_view</field>
        <field name="model">mgmt.audit</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name" />
                <field name="type" />
                <field name="plannend_date" />
                <field name="stage_id" />
                <field name="responsible_id" />

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_details">
                                <strong><field name="name" /></strong>
                                <div>Type: <field name="type" /></div>
                                <div>Planned: <field name="plannend_date" /></div>
                                <div>Stage: <field name="stage_id" /></div>
                                <div>Responsible: <field name="responsible_id" /></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_mgmt_audit_view" model="ir.actions.act_window">
      <field name="name">Audits</field>
      <field name="res_model">mgmt.audit</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_audit_audits" name="Audits" parent="mgmt_base.menu_management_audit" action="action_mgmt_audit_view" sequence="10"/>

</odoo>
