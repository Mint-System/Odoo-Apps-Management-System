<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="nonconformity_form_view" model="ir.ui.view">
      <field name="name">mgmt_audit_project.nonconformity_form_view</field>
      <field name="model">mgmt.nonconformity</field>
      <field name="inherit_id" ref="mgmt_audit.nonconformity_form_view" />
      <field name="arch" type="xml">
        <field name="type" position="after">
          <field name="project_id" invisible="1" />
          <field
                    name="task_ids"
                    context="{'default_nonconformity_id': active_id, 'default_project_id': project_id}"
                >
            <tree>
              <field name="name" />
              <field name="company_id" optional="hide" />
              <field name="project_id" />
              <field name="date_deadline" />
            </tree>
          </field>
        </field>
      </field>
    </record>

</odoo>
