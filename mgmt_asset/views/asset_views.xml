<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="asset_form_view" model="ir.ui.view">
        <field name="name">mgmt_asset.asset_form_view</field>
        <field name="model">mgmt.asset</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="name" />
                                    <field name="model_id" />
                                    <field name="res_id" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="asset_view_tree" model="ir.ui.view">
        <field name="name">mgmt_asset.asset_tree_view</field>
        <field name="model">mgmt.asset</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="model_name" />
                <field name="res_id" />
            </tree>
        </field>
    </record>

    <record id="asset_kanban_view" model="ir.ui.view">
        <field name="name">mgmt_asset.asset_kanban_view</field>
        <field name="model">mgmt.asset</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name" />
                <field name="model_name" />
                <field name="res_id" />

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_details">
                                <strong>
                                    <field name="name" />
                                </strong>
                                <div>
                                    <field name="model_name" />
                                </div>
                                <div>
                                    <t t-esc="record.res_id.raw_value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_mgmt_asset_view" model="ir.actions.act_window">
      <field name="name">Assets</field>
      <field name="res_model">mgmt.asset</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_inventory_assets" name="Assets" parent="mgmt_base.menu_management_inventory" action="action_mgmt_asset_view" sequence="10"/>

</odoo>
