<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="asset_form_view" model="ir.ui.view">
        <field name="name">mgmt_asset.asset_form_view</field>
        <field name="model">mgmt.asset</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="ref" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="asset_view_tree" model="ir.ui.view">
        <field name="name">mgmt_asset.asset_tree_view</field>
        <field name="model">mgmt.asset</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="ref" />
            </tree>
        </field>
    </record>

    <record id="asset_search_view" model="ir.ui.view">
        <field name="name">mgmt_asset.asset_search_view</field>
        <field name="model">mgmt.asset</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <filter
                    string="Name"
                    name="name_filter"
                    domain="[('name', 'ilike', '')]"
                />
            </search>
        </field>
    </record>

    <record id="action_mgmt_asset_view" model="ir.actions.act_window">
      <field name="name">Assets</field>
      <field name="res_model">mgmt.asset</field>
      <field name="view_mode">tree,form</field>
      <field name="search_view_id" ref="asset_search_view" />
    </record>

    <menuitem
        id="menu_inventory_assets"
        name="Assets"
        parent="mgmt_base.menu_mgmt_inventory"
        action="action_mgmt_asset_view"
        sequence="10"
    />

</odoo>
