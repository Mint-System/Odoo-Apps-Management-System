<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="risk_combination_view_tree" model="ir.ui.view">
        <field name="name">mgmt_risk.risk_combination_tree_view</field>
        <field name="model">mgmt.risk.combination</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_mgmt_risk_combination_view" model="ir.actions.act_window">
      <field name="name">Risk Combination</field>
      <field name="res_model">mgmt.risk.combination</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_risk_combination" name="Risk Combination" parent="mgmt_base.menu_configuration_risk" action="action_mgmt_risk_combination_view" sequence="30"/>

</odoo>
