<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="severity_view_tree" model="ir.ui.view">
        <field name="name">mgmt_risk.severity_tree_view</field>
        <field name="model">mgmt.severity</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
                <field name="value" />
                <field name="color" />
            </tree>
        </field>
    </record>

    <record id="severity_search_view" model="ir.ui.view">
        <field name="name">mgmt_risk.severity_search_view</field>
        <field name="model">mgmt.severity</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="action_mgmt_severity_view" model="ir.actions.act_window">
        <field name="name">Severity</field>
        <field name="res_model">mgmt.severity</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="severity_search_view" />
    </record>

    <menuitem
        id="menu_risk_severity"
        name="Severity"
        parent="mgmt_base.menu_configuration_risk"
        action="action_mgmt_severity_view"
        sequence="20"
    />

</odoo>
