<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_inherit_risk" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.risk</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='settings']" position="inside">
                <div class="app_settings_block" data-string="Risk Management">
                    <h2>Risk Management Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col9">
                            <field name="mgmt_risk_formula" widget="selection" class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
