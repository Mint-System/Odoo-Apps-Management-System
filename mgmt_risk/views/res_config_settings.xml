<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">mgmt_risk.res_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mgmt_base.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//setting[@id='mgmt_risk_setting']" position="inside">
                <div invisible="not module_mgmt_risk">
                    <div class="content-group mt16">
                        <label for="mgmt_risk_formula" class="o_light_label" />:
                        <field name="mgmt_risk_formula" />
                    </div>

                </div>
            </xpath>

        </field>
    </record>

</odoo>
