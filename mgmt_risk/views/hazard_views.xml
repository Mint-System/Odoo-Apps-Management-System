<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="hazard_form_view" model="ir.ui.view">
        <field name="name">mgmt_risk.hazard_form_view</field>
        <field name="model">mgmt.hazard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hazard_view_tree" model="ir.ui.view">
        <field name="name">mgmt_risk.hazard_tree_view</field>
        <field name="model">mgmt.hazard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_mgmt_hazard_view" model="ir.actions.act_window">
      <field name="name">Hazards</field>
      <field name="res_model">mgmt.hazard</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_inventory_hazards"
        name="Hazards"
        parent="mgmt_base.menu_management_inventory"
        action="action_mgmt_hazard_view"
        sequence="20"
    />

</odoo>
