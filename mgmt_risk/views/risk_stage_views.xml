<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="risk_stage_form_view" model="ir.ui.view">
        <field name="name">mgmt_risk.risk_stage_form_view</field>
        <field name="model">mgmt.risk.stage</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <div class="oe_button_box" name="button_box"></div>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="code" />
                                    <field name="sequence" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="risk_stage_tree_view" model="ir.ui.view">
        <field name="name">mgmt_risk.risk_stage_tree_view</field>
        <field name="model">mgmt.risk.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
                <field name="sequence" />
            </tree>
        </field>
    </record>

    <record id="action_mgmt_risk_stage_view" model="ir.actions.act_window">
      <field name="name">Risk Stages</field>
      <field name="res_model">mgmt.risk.stage</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_risk_stages" name="Risk Stages" parent="mgmt_base.menu_configuration_risk" action="action_mgmt_risk_stage_view" sequence="10" />

</odoo>
