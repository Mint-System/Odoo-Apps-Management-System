<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="document_form_view" model="ir.ui.view">
        <field name="name">mgmt_requirement.document_form_view</field>
        <field name="model">mgmt.document</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="name" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="document_view_tree" model="ir.ui.view">
        <field name="name">mgmt_requirement.document_tree_view</field>
        <field name="model">mgmt.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_mgmt_document_view" model="ir.actions.act_window">
      <field name="name">Documents</field>
      <field name="res_model">mgmt.document</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_inventory_documents" name="Documents" parent="menu_management_inventory" action="action_mgmt_document_view" sequence="30"/>

</odoo>
