<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="paragraph_form_view" model="ir.ui.view">
        <field name="name">mgmt_requirement.paragraph_form_view</field>
        <field name="model">mgmt.paragraph</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="name" />
                                    <field name="reference" />
                                    <field name="description" />
                                    <field name="document_id" widget="many2many_tags" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="paragraph_view_tree" model="ir.ui.view">
        <field name="name">mgmt_requirement.paragraph_tree_view</field>
        <field name="model">mgmt.paragraph</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="reference" />
                <field name="description" />
                <field name="document_id" />
            </tree>
        </field>
    </record>

    <record id="paragraph_view_kanban" model="ir.ui.view">
        <field name="name">mgmt_requirement.paragraph_kanban_view</field>
        <field name="model">mgmt.paragraph</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name" />
                <field name="reference" />
                <field name="document_id" />

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_details">
                                <strong><field name="name" /></strong>
                                <div>Reference: <field name="reference" /></div>
                                <div>Documents: <field
                                        name="document_id"
                                        widget="many2many_tags"
                                    /></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_mgmt_paragraph_view" model="ir.actions.act_window">
      <field name="name">Paragraphs</field>
      <field name="res_model">mgmt.paragraph</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem
        id="menu_inventory_paragraphs"
        name="Paragraphs"
        parent="mgmt_base.menu_management_inventory"
        action="action_mgmt_paragraph_view"
        sequence="40"
    />

</odoo>
