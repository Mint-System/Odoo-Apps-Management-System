<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="requirement_form_view" model="ir.ui.view">
        <field name="name">mgmt_requirement.requirement_form_view</field>
        <field name="model">mgmt.requirement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="name" />
                                    <field name="description" />
                                    <field name="system_id" />
                                    <field
                                        name="paragraph_ids"
                                        widget="many2many_tags"
                                    />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="requirement_view_tree" model="ir.ui.view">
        <field name="name">mgmt_requirement.requirement_tree_view</field>
        <field name="model">mgmt.requirement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="system_id" />
                <field name="paragraph_ids" />
            </tree>
        </field>
    </record>

    <record id="requirement_view_kanban" model="ir.ui.view">
        <field name="name">mgmt_requirement.requirement_kanban_view</field>
        <field name="model">mgmt.requirement</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name" />
                <field name="system_id" />
                <field name="description" />

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_details">
                                <strong><field name="name" /></strong>
                                <div>System: <field name="system_id" /></div>
                                <div>Description: <field name="description" /></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_mgmt_requirement_view" model="ir.actions.act_window">
      <field name="name">Requirements</field>
      <field name="res_model">mgmt.requirement</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <record id="action_mgmt_requirement_report_view" model="ir.actions.act_window">
      <field name="name">Requirement Report</field>
      <field name="res_model">mgmt.requirement</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_audit_requirements"
        name="Requirements"
        parent="mgmt_base.menu_management_audit"
        action="action_mgmt_requirement_view"
        sequence="20"
    />

    <menuitem
        id="menu_reporting_requirement_report"
        name="Requirement Report"
        parent="mgmt_base.menu_management_reporting"
        action="action_mgmt_requirement_report_view"
        sequence="10"
    />

</odoo>
