<odoo>

  <record id="action_mgmt_paragraph" model="ir.actions.act_window">
    <field name="name">Paragraphs</field>
    <field name="res_model">mgmt.paragraph</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem
        id="menu_mgmt_paragraph"
        name="Paragraphs"
        sequence="2"
        parent="menu_mgmt_regulations"
        action="action_mgmt_paragraph"
    />

  <!-- document tree -->
  <record id="view_tree_mgmt_paragraph" model="ir.ui.view">
    <field name="name">Paragraph Tree</field>
    <field name="model">mgmt.paragraph</field>
    <field name="arch" type="xml">
      <tree>
        <field name="display_name" string="Paragraph" />
        <field name="description" string="Text" />
        <field name="document_id" optional="True" />
        <field
                    name="state"
                    widget="badge"
                    decoration-success=" state == 'incorporated'"
                    decoration-warning=" state == 'changed'"
                />
        <field name="audit_date" widget="date" />
        <field name="id" optional="True" />
      </tree>
    </field>
  </record>

  <!-- search view -->
  <record id="view_paragraph_tree" model="ir.ui.view">
    <field name="name">mgmt.paragraph.search</field>
    <field name="model">mgmt.paragraph</field>
    <field name="arch" type="xml">
      <search string="Paragraph">
        <field
                    name="display_name"
                    string="Paragraph"
                    filter_domain="[('display_name','ilike',self)]"
                />
        <field
                    name="description"
                    string="Text"
                    filter_domain="[('description','ilike',self)]"
                />
        <field
                    name="document_id"
                    string="Document"
                    filter_domain="[('document_id','ilike',self)]"
                />
        <group>
          <filter
                        name="incorporated"
                        domain="[('state','=','incorporated')]"
                        string="Incorporated"
                        help="Incorporated paragraphs"
                    />
          <filter
                        name="changed"
                        domain="[('state','=','changed')]"
                        string="Changed"
                        help="Changed paragraphs"
                    />
        </group>
        <group expand="0" string="Group By...">
          <filter
                        name="group_source"
                        string="Source"
                        context="{'group_by':'document_id'}"
                    />
          <filter
                        name="group_docustructure"
                        string="Docustructure"
                        context="{'group_by':'docustructure_id','search_default_group_docustructure': 1}"
                    />
        </group>
        <searchpanel>
          <field
                        name="document_id"
                        icon="fa-folder"
                        string="Paragraphs"
                        enable_counters="1"
                    />
        </searchpanel>
      </search>
    </field>
  </record>

  <!-- document form -->
  <record id="view_form_mgmt_paragraph" model="ir.ui.view">
    <field name="name">Paragraph Form</field>
    <field name="model">mgmt.paragraph</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button
                        name="button_confirmed"
                        string="Confirm"
                        states="changed"
                        type="object"
                    />
          <button
                        name="button_changed"
                        string="Mark as changed"
                        states="incorporated"
                        type="object"
                    />
          <field name="state" widget="statusbar" select="1" readonly="1" />
        </header>
        <sheet>
          <group name="paragraph_header">
            <group name="paragraph_details">
              <field name="id" readonly="True" />
              <field name="docustructure_id" />
              <field name="name" string="Name" />
              <field name="description" />
            </group>

            <group name="paragraph_metadata">
              <div class="w-100" invisible="False">
                <div class="o_row">

                </div>
              </div>
            </group>

          </group>

          <notebook colspan="4">
            <page string="Requirements">
              <p>Requirement list:</p>
              <field
                                name="requirement_ids"
                                context="{'tree_view_ref': 'mgmt.mgmt_paragraph_requirement'}"
                            />
            </page>
          </notebook>

        </sheet>

        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers" />
          <field name="activity_ids" widget="mail_activity" />
          <field name="message_ids" widget="mail_thread" />
        </div>

      </form>

    </field>
  </record>

</odoo>
