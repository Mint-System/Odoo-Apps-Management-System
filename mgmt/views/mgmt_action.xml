<odoo>

    <record id="action_mgmt_action" model="ir.actions.act_window">
        <field name="name">Actions</field>
        <field name="res_model">mgmt.action</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_mgmt_action"
        name="Actions"
        sequence="40"
        parent="menu_mgmt_operation"
        action="action_mgmt_action"
    />

    <record id="view_tree_mgmt_action" model="ir.ui.view">
        <field name="name">Action Tree</field>
        <field name="model">mgmt.action</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- Configuration -->
    <record id="action_mgmt_audit_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">mgmt.audit.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_mgmt_configuration_audit"
        name="Audit"
        parent="menu_mgmt_configuration"
    />

    <menuitem
        id="menu_mgmt_audit_category"
        name="Categories"
        parent="menu_mgmt_configuration_audit"
        action="action_mgmt_audit_category"
    />

    <record id="action_mgmt_audit_type" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">mgmt.audit.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_mgmt_audit_type"
        name="Types"
        parent="menu_mgmt_configuration_audit"
        action="action_mgmt_audit_type"
    />

</odoo>
