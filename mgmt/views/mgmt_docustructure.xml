<odoo>

  <record id="action_mgmt_docustructure" model="ir.actions.act_window">
    <field name="name">Docustructure</field>
    <field name="res_model">mgmt.docustructure</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem
        id="menu_mgmt_docustructure"
        name="Docustructure"
        sequence="1"
        parent="menu_mgmt_regulations"
        action="action_mgmt_docustructure"
    />

  <!-- document tree -->
  <record id="view_tree_mgmt_docustructure" model="ir.ui.view">
    <field name="name">Docustructure Tree</field>
    <field name="model">mgmt.docustructure</field>
    <field name="arch" type="xml">
      <tree>
        <field name="display_name" string="Name" />
        <field name="document_id" />
        <field name="id" />
      </tree>
    </field>
  </record>

  <!-- search view -->
  <record id="view_docustructure_tree" model="ir.ui.view">
    <field name="name">mgmt.docustructure.search</field>
    <field name="model">mgmt.docustructure</field>
    <field name="arch" type="xml">
      <search string="Docustructure">
        <field
                    name="display_name"
                    string="Name"
                    filter_domain="[('display_name','ilike',self)]"
                />
        <field
                    name="document_id"
                    string="Document"
                    filter_domain="[('document_id','ilike',self)]"
                />
        <group expand="0" string="Group By...">
          <filter
                        name="group_by_category"
                        string="Document"
                        context="{'group_by':'document_id'}"
                    />
        </group>
        <searchpanel>
          <field
                        name="parent_id"
                        icon="fa-folder"
                        string="Regulations"
                        enable_counters="1"
                    />
        </searchpanel>
      </search>
    </field>
  </record>

  <!-- document form -->
  <record id="view_form_mgmt_docustructure" model="ir.ui.view">
    <field name="name">Docustructure Form</field>
    <field name="model">mgmt.docustructure</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group name="docustructure_header">
            <group name="docustructure_details">
              <field name="id" />
              <field name="number" />
              <field name="name" />
              <field name="parent_id" />
              <field name="document_id" />
            </group>
            <group name="docustructure_metadata">
              <div class="w-100" invisible="False">
                <div class="o_row">
                </div>
              </div>
            </group>
          </group>
        </sheet>

        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers" />
          <field name="activity_ids" widget="mail_activity" />
          <field name="message_ids" widget="mail_thread" />
        </div>

      </form>
    </field>
  </record>
</odoo>
