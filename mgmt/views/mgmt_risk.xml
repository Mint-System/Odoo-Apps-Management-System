<odoo>

    <record id="action_mgmt_risks" model="ir.actions.act_window">
        <field name="name">Risks</field>
        <field name="res_model">mgmt.risk</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem
        id="menu_mgmt_risks"
        name="Risks"
        sequence="30"
        parent="menu_mgmt_risk"
        action="action_mgmt_risks"
    />

    <record id="view_risk_tree" model="ir.ui.view">
        <field name="name">mgmt.risk.search</field>
        <field name="model">mgmt.risk</field>
        <field name="arch" type="xml">
            <search string="Risk">
                <field
                    name="name"
                    string="Content"
                    filter_domain="['|', ('name','ilike',self), ('content','ilike',self)]"
                />
            </search>
        </field>
    </record>

    <!-- form -->
    <record id="view_risk_form" model="ir.ui.view">
        <field name="name">Risk Form</field>
        <field name="model">mgmt.risk</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="risk_header">
                        <group name="risk_details">
                            <field name="id" />
                            <field name="name" />
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Hazards" name="hazards">
                            <p>Hazards list:</p>
                            <field
                                name="hazard_ids"
                                placeholder="Hazard"
                                context="{'tree_view_ref': 'mgmt.view_tree_mgmt_hazard_risk'}"
                            />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
