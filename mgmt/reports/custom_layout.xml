<odoo>
    <template id="custom_layout">
        <t t-name="mgmt.custom_layout">
            <t t-set="company" t-value="env.company" />
            <t t-set="company" t-value="env.company" />
            <t t-if="not o" t-set="o" t-value="doc" />

            <div class="header">
                <div t-if="report_type == 'pdf'">
                    <table style="width: 100%; border: solid 1px;">
                        <tr style="border: solid 1px;">
                            <td
                                rowspan="2"
                                style="width: 27%; border: solid 1px; text-align: center; vertical-align: middle; padding: 3px;"
                            >
                                <img
                                    t-if="company.logo"
                                    t-att-src="image_data_uri(company.logo)"
                                    style="margin: auto;"
                                    alt="Logo"
                                    width="200"
                                />
                            </td>
                            <td
                                rowspan="2"
                                style="width: 53%; text-align: center; vertical-align: middle; font-size: 24px; font-weight: bold"
                            >
                                <span t-esc="title" />
                            </td>
                            <td
                                style="width: 20%;  border: solid 1px; text-align: center; vertical-align: middle; font-size: 20px; font-weight: bold; padding: 10px"
                            >
                                <span t-esc="code" />
                            </td>
                        </tr>
                        <tr style="border: solid 1px;">
                            <td
                                style="width: 20%; border: solid 1px; text-align: center; vertical-align: middle; font-size: 14px; padding: 8px"
                            >Version <span t-esc="version" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="footer">
                <div t-if="report_type == 'pdf'">
                    <table style="width: 100%; border-top: solid 1px;">
                        <tr>
                            <td style="padding: 3px; text-align: right">
                        Page: <span class="page" />
/                            <span class="topage" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

        <div
                class="article"
                t-att-data-oe-model="o and o._name"
                t-att-data-oe-id="o and o.id"
                t-att-data-oe-lang="o and o.env.context.get('lang')"
            >
            <t t-out="0" />
        </div>

    </t>
</template>
</odoo>
